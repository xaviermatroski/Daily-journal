<%- include("./partials/header") -%>

<h1> <%= title %>  </h1>

<form action= "/compose" method="post">
    <div class="form-group">
        <label> Title </label>
        <input class="form-control" type="text" placeholder="write" name="title">

        <label> Body </label>
        <textarea name="body" class="form-control" rows="5" cols="30"></textarea>
        
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
</form>

